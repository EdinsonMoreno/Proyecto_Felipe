#:kivy 2.1.0
# Layout práctica 4

<Practica4Screen>:
    name: "practica4"
    canvas.before:
        Color:
            rgba: (240/255, 240/255, 240/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [40, 30, 40, 30]
        spacing: 20

        Label:
            text: "Práctica 4 – Simulación de caldera"
            font_size: '22sp'
            color: (34/255, 34/255, 34/255, 1)
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + 20

        BoxLayout:
            orientation: 'horizontal'
            spacing: 40

            # Inputs a la izquierda
            BoxLayout:
                orientation: 'vertical'
                spacing: 14
                size_hint_x: 0.5
                height: self.minimum_height

                Label:
                    text: "Volumen inicial de agua (ml)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_volumen
                    hint_text: "Ej: 2000"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Potencia de la resistencia (W)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_potencia
                    hint_text: "Ej: 1500"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Tiempo de operación (min)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_tiempo
                    hint_text: "Ej: 10"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

            # Resultados a la derecha
            BoxLayout:
                orientation: 'vertical'
                spacing: 18
                size_hint_x: 0.5
                padding: [20, 10, 20, 10]
                canvas.before:
                    Color:
                        rgba: (72/255, 219/255, 251/255, 0.12)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

                Label:
                    text: "Resultados"
                    font_size: '18sp'
                    color: (46/255, 134/255, 222/255, 1)
                    bold: True

                Label:
                    text: "Temperatura final: [b]{}[/b]".format(root.temperatura_maxima)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Tiempo hasta ebullición: [b]{}[/b]".format(root.tiempo_ebullicion)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Energía consumida: [b]{}[/b]".format(root.energia_consumida)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Vapor generado: [b]{}[/b]".format(root.vapor_generado)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Eficiencia: [b]{}[/b]".format(root.eficiencia)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                # Indicador visual tipo barra de temperatura
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 28
                    spacing: 8
                    Label:
                        text: "Temp."
                        color: (46/255, 134/255, 222/255, 1)
                        font_size: '14sp'
                        size_hint_x: 0.2
                    ProgressBar:
                        max: 1
                        value: root.barra_temp
                        size_hint_x: 0.7
                        height: 18
                    Label:
                        text: "100°C"
                        color: (46/255, 134/255, 222/255, 1)
                        font_size: '14sp'
                        size_hint_x: 0.2

                Label:
                    text: root.mensaje_error
                    color: (1, 0, 0, 1)
                    font_size: '15sp'

        Button:
            text: "Simular"
            size_hint: (0.3, None)
            height: 48
            pos_hint: {'center_x': 0.5}
            background_color: (16/255, 172/255, 132/255, 1)
            color: (1,1,1,1)
            font_size: '18sp'
            on_release: root.simular_caldera()

        Button:
            text: "Volver"
            size_hint: (0.2, None)
            height: 42
            pos_hint: {'center_x': 0.5}
            background_color: (46/255, 134/255, 222/255, 1)
            color: (1,1,1,1)
            font_size: '16sp'
            on_release: app.root.current = "main"
