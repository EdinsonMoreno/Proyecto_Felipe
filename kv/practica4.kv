#:kivy 2.1.0
# Layout práctica 4

<Practica4Screen>:
    name: "practica4"
    canvas.before:
        Color:
            rgba: (240/255, 240/255, 240/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [min(self.width*0.08, 80), min(self.height*0.06, 50), min(self.width*0.08, 80), min(self.height*0.06, 50)]
        spacing: min(self.height*0.04, 30)

        Label:
            text: "Práctica 4 – Simulación de caldera"
            font_size: str(max(self.width, self.height) * 0.025) + 'sp'
            color: (34/255, 34/255, 34/255, 1)
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + min(self.height*0.03, 20)

        BoxLayout:
            orientation: 'horizontal'
            spacing: min(self.width*0.04, 40)

            # Inputs a la izquierda (vertical, estilo práctica 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: min(self.height*0.018, 14)
                size_hint_x: 0.5

                Label:
                    text: "Volumen inicial de agua (ml)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_volumen
                    hint_text: "Ej: 2000"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Potencia de la resistencia (W)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_potencia
                    hint_text: "Ej: 1500"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Tiempo de operación (min)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_tiempo
                    hint_text: "Ej: 10"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

            # Resultados a la derecha (idéntico a práctica 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: 18
                size_hint_x: 0.5
                padding: [20, 10, 20, 10]
                canvas.before:
                    Color:
                        rgba: (72/255, 219/255, 251/255, 0.12)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

                Label:
                    text: "Resultados"
                    font_size: '18sp'
                    color: (46/255, 134/255, 222/255, 1)
                    bold: True

                Label:
                    text: "Temperatura final: [b]{}[/b]".format(root.temperatura_maxima)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Tiempo hasta ebullición: [b]{}[/b]".format(root.tiempo_ebullicion)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: root.mensaje_error
                    color: (1, 0, 0, 1)
                    font_size: '15sp'

        # Botones de acción
        BoxLayout:
            orientation: 'horizontal'
            spacing: 18
            size_hint_y: None
            height: 60
            Button:
                text: "Simular"
                size_hint: None, None
                size: dp(200), dp(60)
                on_press: root.simular_caldera()
            Button:
                text: "Graficar"
                size_hint: None, None
                size: dp(200), dp(60)
                on_press: root.graficar_resultados()
        Button:
            text: "Limpiar"
            size_hint: None, None
            size: dp(200), dp(60)
            background_color: 0.3, 0.3, 0.3, 1
            on_press: root.limpiar_datos()

        # Botón volver
        Button:
            text: "Volver"
            size_hint: (0.2, None)
            height: 42
            pos_hint: {'center_x': 0.5}
            background_color: (46/255, 134/255, 222/255, 1)
            color: (1,1,1,1)
            font_size: '16sp'
            on_release: app.root.current = "main"
