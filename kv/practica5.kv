#:kivy 2.1.0
# Layout práctica 5

<Practica5Screen>:
    name: "practica5"
    canvas.before:
        Color:
            rgba: (240/255, 240/255, 240/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [min(self.width*0.08, 80), min(self.height*0.06, 50), min(self.width*0.08, 80), min(self.height*0.06, 50)]
        spacing: min(self.height*0.04, 30)

        Label:
            text: "Práctica 5 – Simulación de captación de agua lluvia"
            font_size: str(max(self.width, self.height) * 0.025) + 'sp'
            color: (34/255, 34/255, 34/255, 1)
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + min(self.height*0.03, 20)

        BoxLayout:
            orientation: 'horizontal'
            spacing: min(self.width*0.04, 40)

            # Inputs a la izquierda (vertical, estilo práctica 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: min(self.height*0.018, 14)
                size_hint_x: 0.5

                Label:
                    text: "Intensidad de la lluvia (mm/h)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_intensidad
                    hint_text: "Ej: 20"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Área del techo (m²)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_area
                    hint_text: "Ej: 50"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Tiempo de captación (min)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_tiempo
                    hint_text: "Ej: 30"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

            # Resultados a la derecha (idéntico a práctica 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: 18
                size_hint_x: 0.5
                padding: [20, 10, 20, 10]
                canvas.before:
                    Color:
                        rgba: (72/255, 219/255, 251/255, 0.12)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

                Label:
                    text: "Resultados"
                    font_size: '18sp'
                    color: (46/255, 134/255, 222/255, 1)
                    bold: True

                Label:
                    text: "Volumen captado: [b]{}[/b]".format(root.volumen_captado)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Nivel en el tanque: [b]{}[/b]".format(root.nivel_sensor)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Volumen estimado por sensor: [b]{}[/b]".format(root.volumen_estimado)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Precisión del sensor: [b]{}[/b]".format(root.precision)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Tiempo de captación: [b]{}[/b]".format(root.tiempo_captacion)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                # Visualización gráfica del tanque (barra de nivel)
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 32
                    spacing: 8
                    Label:
                        text: "Tanque"
                        color: (46/255, 134/255, 222/255, 1)
                        font_size: '14sp'
                        size_hint_x: 0.2
                    ProgressBar:
                        max: 100
                        value: float(root.nivel_sensor.split()[0]) if root.nivel_sensor else 0
                        size_hint_x: 0.7
                        height: 22
                    Label:
                        text: "100 cm"
                        color: (46/255, 134/255, 222/255, 1)
                        font_size: '14sp'
                        size_hint_x: 0.2

                Label:
                    text: root.mensaje_error
                    color: (1, 0, 0, 1)
                    font_size: '15sp'

        # Botón de simulación
        Button:
            text: "Simular"
            size_hint: (0.3, None)
            height: 48
            pos_hint: {'center_x': 0.5}
            background_color: (16/255, 172/255, 132/255, 1)
            color: (1,1,1,1)
            font_size: '18sp'
            on_release: root.simular_captacion()

        # Botón volver
        Button:
            text: "Volver"
            size_hint: (0.2, None)
            height: 42
            pos_hint: {'center_x': 0.5}
            background_color: (46/255, 134/255, 222/255, 1)
            color: (1,1,1,1)
            font_size: '16sp'
            on_release: app.root.current = "main"
