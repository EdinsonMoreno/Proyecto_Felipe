#:kivy 2.1.0
# Layout práctica 2

<Practica2Screen>:
    name: "practica2"
    canvas.before:
        Color:
            rgba: (240/255, 240/255, 240/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [min(self.width*0.08, 80), min(self.height*0.06, 50), min(self.width*0.08, 80), min(self.height*0.06, 50)]
        spacing: min(self.height*0.04, 30)

        Label:
            text: "Práctica 2 – Simulación del sistema de filtrado multicapa"
            font_size: str(max(self.width, self.height) * 0.025) + 'sp'
            color: (34/255, 34/255, 34/255, 1)
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + min(self.height*0.03, 20)

        BoxLayout:
            orientation: 'horizontal'
            spacing: min(self.width*0.04, 40)

            # Inputs a la izquierda (vertical, estilo práctica 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: min(self.height*0.018, 14)
                size_hint_x: 0.5

                Label:
                    text: "Turbidez inicial (NTU)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_turbidez
                    hint_text: "Ej: 50"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Volumen de agua (L)"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 28
                TextInput:
                    id: input_volumen
                    hint_text: "Ej: 20"
                    input_filter: 'float'
                    background_color: (1,1,1,1)
                    foreground_color: (34/255, 34/255, 34/255, 1)
                    multiline: False
                    size_hint_y: None
                    height: 32

                Label:
                    text: "Capas activas"
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'
                    size_hint_y: None
                    height: 24

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    size_hint_y: None
                    height: 32

                    CheckBox:
                        id: check_grava
                        active: root.grava_activa
                        on_active: root.grava_activa = self.active
                    Label:
                        text: "Grava"
                        color: (34/255, 34/255, 34/255, 1)
                        font_size: '15sp'
                        size_hint_x: None
                        width: 60

                    CheckBox:
                        id: check_arena
                        active: root.arena_activa
                        on_active: root.arena_activa = self.active
                    Label:
                        text: "Arena"
                        color: (34/255, 34/255, 34/255, 1)
                        font_size: '15sp'
                        size_hint_x: None
                        width: 60

                    CheckBox:
                        id: check_carbon
                        active: root.carbon_activo
                        on_active: root.carbon_activo = self.active
                    Label:
                        text: "Carbón activado"
                        color: (34/255, 34/255, 34/255, 1)
                        font_size: '15sp'
                        size_hint_x: None
                        width: 110

            # Resultados a la derecha (idéntico a práctica 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: 18
                size_hint_x: 0.5
                padding: [20, 10, 20, 10]
                canvas.before:
                    Color:
                        rgba: (72/255, 219/255, 251/255, 0.12)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

                Label:
                    text: "Resultados"
                    font_size: '18sp'
                    color: (46/255, 134/255, 222/255, 1)
                    bold: True

                Label:
                    text: "Turbidez final: [b]{}[/b]".format(root.turbidez_final)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: "Eficiencia de remoción: [b]{}[/b]".format(root.eficiencia_remocion)
                    markup: True
                    color: (34/255, 34/255, 34/255, 1)
                    font_size: '16sp'

                Label:
                    text: root.mensaje_error
                    color: (1, 0, 0, 1)
                    font_size: '15sp'

        # Botones de acción
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)
            padding: dp(20), 0

            Button:
                text: "Simular"
                size_hint_x: 1
                font_size: '16sp'
                background_color: 0.0, 0.2, 0.4, 1
                on_release: root.simular_filtrado()

            Button:
                text: "Graficar"
                size_hint_x: 1
                font_size: '16sp'
                background_color: 0.0, 0.4, 0.3, 1
                on_release: root.graficar_animacion()

            Button:
                text: "Animación"
                size_hint_x: 1
                font_size: '16sp'
                background_color: 0.0, 0.3, 0.5, 1
                on_release: root.mostrar_animacion()

            Button:
                text: "Limpiar"
                size_hint_x: 1
                font_size: '16sp'
                background_color: 0.4, 0.2, 0.0, 1
                on_release: root.limpiar_datos()

        # Botón volver
        Button:
            text: "Volver"
            size_hint: (0.2, None)
            height: 42
            pos_hint: {'center_x': 0.5}
            background_color: (46/255, 134/255, 222/255, 1)
            color: (1,1,1,1)
            font_size: '16sp'
            on_release: app.root.current = "main"
